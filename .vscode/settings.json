{
  "cmake.environment": {
    "CONDA_PREFIX": "${env:HOME}/miniconda3/envs/mariners",
    "CMAKE_PREFIX_PATH": "${env:HOME}/miniconda3/envs/mariners",
    "PATH": "${env:HOME}/miniconda3/envs/mariners/bin:${env:PATH}"
  },
  "terminal.integrated.profiles.osx": {
    "conda-shell": {
      "path": "zsh",
      "args": ["-c", "conda activate your-env-name && exec zsh"]
    }
  },
  "terminal.integrated.defaultProfile.osx": "conda-shell",
  "remote.autoForwardPorts": false
}
